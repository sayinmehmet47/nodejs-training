{
	"compilerOptions": {
	  "target": "ES6",
	  "module": "CommonJS",
	  "outDir": "./dist",
	  "rootDir": "./",
	  "strict": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "esModuleInterop": true,
	  "skipLibCheck": true
	},
	"include": ["src/**/*", "app.ts"],
	"exclude": ["node_modules", "dist"]
  }