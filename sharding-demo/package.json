{
  "name": "sharding-demo",
  "version": "1.0.0",
  "description": "Learn database sharding with PostgreSQL",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "demo": "npx tsx src/demo.ts",
    "demo:ha": "npx tsx src/ha-demo.ts",
    "ha:up": "docker-compose -f ha-simple/docker-compose.yml up -d",
    "ha:down": "docker-compose -f ha-simple/docker-compose.yml down",
    "ha:logs": "docker-compose -f ha-simple/docker-compose.yml logs -f"
  },
  "dependencies": {
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/pg": "^8.10.9",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0"
  }
}
